{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["jest", "node"],
    "declaration": true,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "jest.config.ts",
    "webpack.config.js",
    "test/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts",
    "src/**/*.ts",
    ".jest/**/*.ts"
  ]
}
