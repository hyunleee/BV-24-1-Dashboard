{
  "name": "dashboard-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "dotenv -e .env -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/dashboard-server/src/main.js",
    "db-migrate:local": "dotenv -e .env -- prisma migrate dev --schema ../libs/prisma/schema.prisma",
    "db-migrate:local:create-only": "dotenv -e .env -- prisma migrate dev --schema ../libs/prisma/schema.prisma --create-only",
    "db-migrate:local:status": "dotenv -e .env -- prisma migrate status --schema ../libs/prisma/schema.prisma",
    "prepare:prisma": "prisma generate --schema ../libs/prisma/schema.prisma",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "main": "dist/dashboard-server/src/main.js",
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs-modules/ioredis": "^1.0.1",
    "@nestjs/apollo": "^10.0.22",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.0.22",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.0.5",
    "@prisma/client": "^5.5.2",
    "@prisma/extension-read-replicas": "^0.3.0",
    "apollo-server-express": "^3.10.1",
    "bcrypt": "^5.0.1",
    "blueimp-md5": "^2.19.0",
    "class-validator": "^0.13.2",
    "ioredis": "^5.2.2",
    "nanoid": "^4.0.0",
    "nestjs-pino": "^3.1.1",
    "nestjs-prisma": "^0.18.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pino-http": "^8.2.0",
    "prisma": "^5.5.2",
    "prisma-nestjs-graphql": "19.0.1",
    "prisma-query-log": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^3.11.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/blueimp-md5": "^2.18.1",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
